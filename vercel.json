{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "devCommand": "node dist/server/main.js",
          "outputDirectory": "dist",
          "buildCommand": "ng build --prod && ng run blog:server:production",
          "output": {
            "public/index.html": "/index.html",
            "dist/browser/*": "/dist/browser/",
            "dist/server/*": "/dist/server/"
          }
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }
  